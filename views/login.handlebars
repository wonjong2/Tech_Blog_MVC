<div class="container-fluid">
    <div class="card mt-3 mx-5" data-id="1">
        <div
            class="d-flex justify-content-start align-items-center card-header bg-secondary"
        >
            <p class="title mb-0">Login</p>
        </div>
        <div class="card-body">
            <form class="form login-form">
                <div class="mb-3">
                    <label
                        for="username-login"
                        class="form-label"
                    >Username</label>
                    <input
                        type="text"
                        class="form-control"
                        id="username-login"
                    />
                </div>
                <div class="mb-3">
                    <label
                        for="password-login"
                        class="form-label"
                    >Password</label>
                    <input
                        type="text"
                        class="form-control"
                        id="password-login"
                    />
                </div>
                <div class="form-group">
                    <button
                        class="btn btn-primary"
                        type="submit"
                    >Login!</button>
                </div>
                <p class="auth-option"><a href="/signup">Sign up</a></p>
            </form>
        </div>
    </div>
</div>

