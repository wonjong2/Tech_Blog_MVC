<div class="container-fluid">
    {{#each posts}}
        <div class="card mt-3 mx-5" data-id="{{this.id}}">
            <div
                class="d-flex justify-content-between align-items-center card-header bg-secondary"
            >
                <p class="title mb-0">{{this.title}}</p>
                <p class="user-date mb-0">Posted by
                    {{this.user.user_name}}
                    on
                    {{format_date this.date}}</p>
            </div>
            <div class="card-body">
                <p class="card-text">{{this.content}}</p>
            </div>
        </div>
    {{/each}}
</div>

<script scr="./js/posts.js" type="text/javascript"></script>