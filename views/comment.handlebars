<div class="container-fluid posts-home">
    <div class="card mt-3 mx-5 post-card" data-post-id="{{post.id}}">
        <div class="d-flex justify-content-between align-items-center card-header bg-secondary">
            <p class="title mb-0">{{post.title}}</p>
            <p class="user-date mb-0">Posted by
                {{post.user.user_name}}
                on
                {{format_date post.date}}</p>
        </div>
        <div class="card-body">
            <p class="card-text">{{post.content}}</p>
        </div>
    </div>
</div>

<div class="container-fluid" id="comments-container">
    <div class="card mt-3 mx-5"">
        <div
            class=" d-flex justify-content-start align-items-center card-header bg-secondary">
        <p class="title mb-0">Comments</p>
    </div>
    <div class="card-body">
        {{#if logged_in}}
        <form class="add-comment-form form">
            <div class="mb-3">
                <label for="create-comment" class="form-label">Comment</label>
                <textarea class="form-control" id="comment"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit" id="submit-comment-button">Submit</button>
            </div>
        </form>
        {{/if}}
        {{#if comments.length}}
        {{#each comments}}
        <p class="mb-1">{{this.comment}}</p>
        <p>-{{this.user.user_name}},
            {{format_date this.date}}</p>
        {{/each}}
        {{/if}}
    </div>
</div>
</div>

<script src="/js/authcheck.js" type="text/javascript"></script>
<script src="/js/comments.js" type="text/javascript"></script>