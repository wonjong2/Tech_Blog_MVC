<div class="container-fluid" id="dashboard">
    {{#each myPosts}}
        <div class="card mt-3 mx-5">
            <div
                class="d-flex justify-content-between align-items-center card-header bg-secondary"
                data-post-id="{{this.id}}"
                id="post-dashboard"
            >
                <p class="title mb-0">{{this.title}}</p>
                <p class="user-date mb-0">{{format_date this.date}}</p>
            </div>
        </div>
    {{/each}}

    <div class="d-flex">
        <button
            type="button"
            class="btn btn-primary btn-lg mt-3 mx-5"
            id="new-post"
        >+ New Post</button>
    </div>
</div>

<div class="container-fluid" id="new-post-form" style="display:none">
    <div class="card mt-3 mx-5" data-id="1">
        <div
            class="d-flex justify-content-start align-items-center card-header bg-secondary"
        >
            <p class="title mb-0">Create New Post</p>
        </div>
        <div class="card-body">
            <form class="create-post-form form">
                <div class="mb-3">
                    <label for="title-post" class="form-label">Title</label>
                    <input type="text" class="form-control" id="title-post" />
                </div>
                <div class="mb-3">
                    <label for="content-post" class="form-label">Content</label>
                    <textarea class="form-control" id="content-post"></textarea>
                </div>
                <div class="form-group">
                    <button
                        class="btn btn-primary"
                        type="submit"
                        id="create-post-button"
                    >Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="/js/dashboard.js" type="text/javascript"></script>